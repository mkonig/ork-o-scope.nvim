{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["docs/guidelines.md"],
  "formatter": {
    "stylua": {
      "command": ["stylua", "$FILE"],
      "extensions": [".lua"]
    },
    "markdownlint": {
      "command": ["markdownlint", "--fix", "$FILE"],
      "extensions": [".md"]
    },
    "nixpkgs-fmt": {
      "command": ["nixpkgs-fmt", "$FILE"],
      "extensions": [".nix"]
    }
  }
}
